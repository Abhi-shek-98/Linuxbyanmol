chef-client -zr "recipe[cookbook1::recipe1]"
chef exec ruby -c cookbook1/recipes/recipe1.rb

##APACHE##

package 'httpd' do
action :install
end

file '/var/www/html/index.html' do
content 'Hello my node'
action :create
end


service 'httpd' do
action [:enable, :start]
end
##APACHE##

##ATTRIBUTE##
file '/basicinfo' do
 content "This is to get Attributes
 HOSTNAME: #{node['hostname']}
 IPADDRESS: #{node['ipaddress']}
 CPU: #{node['cpu']['0']['mhz']}
 MEMORY: #{node['memory']['total']}"
 owner 'root'
 group 'root'
action :create
end

## MULTIPLE SOFTWARES  ##
%w(httpd mariadb-server unzip git vim)
.each do |p|
action :install
end
end

